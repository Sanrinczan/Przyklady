function wyswietlDate(){

var dzisiejszaData = new Date();
var dzisiejszyDzien = dzisiejszaData.getDate();
var aktualnyMiesiac = dzisiejszaData.getMonth() + 1;
var aktualnyRok = dzisiejszaData.getFullYear();
if (dzisiejszyDzien < 10) dzisiejszyDzien = "0" + dzisiejszyDzien;
if (aktualnyMiesiac < 10) aktualnyMiesiac = "0" + aktualnyMiesiac;
alert ("Dzisiejsza data to: " + dzisiejszyDzien + "." + aktualnyMiesiac + "." + aktualnyRok);

}